<% @subtitle = "Author Responsibilities" %>
<% @title = "Manuscript Submission" %>
<%= error_messages_for :contribution, :header_message=>"Your form could not be saved", :message=>"Please correct the following errors:" %>

<div class="block"><%= get('author_responsibilities_header') -%></div>

<div class="block"><%= get('auth_account_sponsor_header') -%></div>

<div class="form-section">
<%= form_tag({:action => 'update_author_responsibilities', :contribution_id => @contribution.id}, {:id => "form"}) %>








<div class="question">
  <div class="question-text">
    <label><%= get('author_resp_agree') -%></label>
  </div>
  <div class="answer"><%= yes_no_radio 'contribution', 'agree_contents', @contribution.agree_contents %>
					<span id="contribution_agree_contents_span" <%= hide_on(true, @contribution.agree_contents) -%> >
						&nbsp;&nbsp;&nbsp;
						<span class="note"><%= get('author_resp_details_agree') -%></span> 
						<br />
						<%= text_area 'contribution', :agree_contents_details, :rows=>"2", :cols=>"40" %>
					</span>
  </div>
  <div class="clear"></div>
</div>


<div class="question">
  <div class="question-text">
    <%= get('author_resp_sole_submission') -%></label>
  </div>
  <div class="answer">
	<%= check_box 'contribution', :sole_submission, {}, '1', '0'  -%>
  </div>
  <div class="clear"></div>
</div>


<div class="question">
  <div class="question-text">
    <label><%= get('author_resp_received_payment') -%> </label>
  </div>
  <div class="answer"> 
					<%= yes_no_radio 'contribution', :received_payment, @contribution.received_payment %>
					<span id="contribution_received_payment_span" <%= hide_on(false, @contribution.received_payment) -%> >
						&nbsp;&nbsp;&nbsp;
						<span class="note"><%= get('author_resp_details_received_payment') -%></span> 
