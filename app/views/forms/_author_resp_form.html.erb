			<br />
			<%= text_area 'contribution', :assisted_details, :rows=>"2", :cols=>"40" %>
		</span>
  </div>
  <div class="clear"></div>
</div>


<% [1,2,3,6,4,5].each do |n| %>
  <% if n == 2 %>
   <%= yes_no_question :contribution, "arynq#{n}", :required => false, :table => false, :details_on => false -%>
  <% else %>
   <%= yes_no_question :contribution, "arynq#{n}", :required => false, :table => false -%>
  <% end %>
<% end %>
</fieldset>


<div class="question">
  <div class="question-text">
    <label> <%= get('author_resp_agree_policies') -%> </label>
  </div>
  <div class="answer">
    <%= yes_no_radio 'contribution', :agree_policies, @contribution.agree_policies %>
    <span id="contribution_agree_policies_span" <%= hide_on(true, @contribution.agree_policies) -%> >
	&nbsp;&nbsp;&nbsp;
	<span class="note"><%= get('author_resp_details_agree_policies') -%></span> 
	<br />
	<%= text_area 'contribution', :agree_policies_details, :rows=>"2", :cols=>"40" %>
   </span>
  </div>
  <div class="clear"></div>
</div>

<%= yes_question :contribution, "arynq7", :required => false, :table => false -%>

<h3>Author Signature:</h3>
<%= signature_block('contribution', "Author Responsibilities Form", 'responsibilities_') %>

     <% unless @generating_pdf %>
        <div class="button-nav dontprint"><%= submit_tag " I Agree ", :accesskey => 'r', :name=>'next' %></div>
     <% end %>

</form>
