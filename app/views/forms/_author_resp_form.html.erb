<fieldset>
<legend><%= get('author_resp_medical_questions_title') -%></legend>
<div class="question">
  <div class="question-text"><label><%= get('author_resp_assisted_label') -%></label></div>
  <div class="answer"><%= yes_no_radio 'contribution', :assisted, @contribution.assisted %>
	<span class="note"><%= get('author_resp_assisted_note') -%></span> 
		<span id="contribution_assisted_span" <%= hide_on(false, @contribution.assisted) -%> >
			&nbsp;&nbsp;&nbsp;
