<%form_remote_tag :url => {:controller => "admin", :action => "send_first_reminder_for_packet"},:html =>{:id=>'reviewer_checkin_form'} do%>
	<textarea name="message" rows="20" cols="40" id="message" class="mceEditor">
		<%initial_date = fmt_date_time(@article_submission_reviewer.time_of_status("reviewer_need_comments"))%>
        <%due_date = fmt_date(@article_submission_reviewer.comments_deadline)%>

		<%= get('reviewer_first_reminder_for_packet',[@reviewer,@article_submission,@article_submission_reviewer,initial_date,due_date])%>
	</textarea>
    <%=hidden_field_tag 'id',@article_submission_reviewer.id%>	
	<%= submit_tag 'Send Email',:onclick=>"this.style.display='none';tinyMCE.triggerSave();" -%>
	
<%end%>

<%= link_to 'Edit This Template', '/edit_user_template/?template_alias=reviewer_first_reminder_for_packet',:popup => true%>

<%= render :partial => '/admin/tinymce_init' -%>
