<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<%= render :partial=>'/layouts/new_head' -%>

	<body>
		<div id="left_shadow"></div>
		<div id="right_shadow"></div>
		<div style="width:100%; background-color:#FFF;">
			<%= render :partial => '/layouts/header' %>

			<div id="uline">
			  <div id="ulinelight"></div>
			</div>

			<div id="ms-mainmenu">
			  <div id="step1">
			    <%= link_to image_tag('st1.png', :width => 260, :height => 60, :border => 0), :controller => :users, :action => :signup -%>
			  </div>
			  <div style="float:left">
			    <%= image_tag('arrow.png', :width => 20, :height => 82, :border =>0) -%>
			  </div>
			  <div id="step2">
			    <%= link_to image_tag('st2.png', :width => 260, :height => 60, :border => 0), :controller => :manuscripts -%>
			  </div>
			  <div style="float:left">
			    <%= image_tag('arrow.png', :width => 20, :height => 82, :border =>0) -%>
			  </div>
			  <div id="step3">
			    <%= link_to image_tag('st3.png', :width => 260, :height => 60, :border => 0), :controller => :manuscripts -%>
			  </div>
			</div>

			<div style="margin:auto; width:900px">
				<table border="0" cellspacing="0" cellpadding="4" style="margin-top:20px;">
				  <tr>
				    <td width="610">
				      <%= yield %>
				    </td>
				    <td width="290" align="center" valign="top" rowspan="2">
							<%= render :partial => '/layouts/login_box' %>
				    </td>
				  </tr>
				  <tr>
				    <td>&nbsp;</td>
				  </tr>
				</table>
			</div>
		</div>

		<%= render :partial=>'/layouts/new_footer' -%>

	</body>
</html>

